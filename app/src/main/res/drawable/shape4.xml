<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background Color -->
    <solid android:color="#D1CDAF" />

    <!-- Corner Radius -->
    <corners android:radius="10dp" />

    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="#0000FF" /> <!-- Blue border color -->

    <!-- Dotted Border -->
    <stroke
        android:width="2dp"
        android:color="#0000FF"
        android:dashWidth="5dp"
        android:dashGap="5dp" />

</shape>
