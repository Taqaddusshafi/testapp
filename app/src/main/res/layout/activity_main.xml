<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/search_box"
        android:layout_marginStart="20dp"
        android:background="@drawable/shape"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:hint="search for item here"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"></EditText>

        <TextView
            android:id="@+id/ytxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search_box"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:text="Please select only one checkbox out of the given options based on the type of patent you wish to file"
            android:textAlignment="center">

        </TextView>

        <LinearLayout
            android:id="@+id/boxes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ytxt"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp">

            <CheckBox
                android:id="@+id/patent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:text="Patent" />

            <CheckBox
                android:id="@+id/copyright_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:text="Copyright" />
            <CheckBox
                android:id="@+id/trademark_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/copyright_checkbox"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:text="Trademark" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/lineaer22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/boxes"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp">



            <CheckBox
                android:id="@+id/design_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/trademark_checkbox"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:text="Design" />
            <CheckBox
                android:id="@+id/tradescret"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/trademark_checkbox"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:text="Trade Secret" />
        </LinearLayout>

        <TextView
            android:id="@+id/inst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search_button"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:visibility="gone"
            android:layout_marginBottom="20dp"
            android:text="You need to follow below steps for applying the above selected Options "
            android:textAlignment="center"></TextView>
        <TextView
            android:id="@+id/text0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/inst"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:justificationMode="inter_word"
            android:text="Patent Procedure in India with steps\n
    1. Step 1: Write down the invention (idea or concept) with as many details as possible\n
    2. Step 2: Novelty Search / Patentability search (optional step)\n
    3. Step 3: Patent Drafting / Writing patent application\n
    4. Step 4: Filing the Patent Application\n
    5. Step 5: Publication of the application\n
    6. Step 6: Request for examination\n
    7. Step 7: Respond to objections"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/text4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text0"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:justificationMode="inter_word"
            android:text="The eight golden rules to protection our Trade secrets:\n
1.	Implement business procedures to augment non-disclosure agreements : creating agreements, policies, procedures, and records to establish and document protection.\n
2.	Control physical and electronic access : establishing physical and electronic security and confidentiality measures.\n
3.	Identify, assess and take steps to manage risks : assessing risks to identify and prioritize trade secret vulnerabilities.\n
4.	 Create supply chain procedures and plans : establishing due diligence and ongoing third-party management procedures.\n
5.	Conduct employee and vendor training : instituting an information protection team.\n
6.	Assemble a trade secret SWAT team: training and capacity building with employees and third parties.\n
7.	Make continual improvements: monitoring and measuring corporate efforts.\n
8.	Make trade secret protection a priority: taking corrective actions and continually improving policies and procedures.\n"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/text1"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text4"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:text="Copyrights\n
        Step 1: File an Application\n
        Step 2: Examination\n
        Step 3: Registration"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:visibility="gone"
        android:id="@+id/text2"
        android:text="Documents required to register a Trademark online\n
        1.	1.1. Incorporation Certificate( if) or \n
            1.2. Partnership Deed(if)\n
        2.	PAN Card\n
        3.	Aadhaar Card\n
        4.	Form TM-48 Signed\n
        5.	Logo.
"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1">
    </TextView>

    <TextView
        android:id="@+id/text3"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text2"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="Register Design\n
     1.	Step 1 Finding out whether any registration already exists\n
     2.	Step 2 Preparing a representation of the design\n
     3.	Step 3 Identifying the class of design\n
     4.	Step 4 Providing a statement of novelty\n
     5.	Step 5 Including a disclaimer\n
     6.	Step 6 Claiming a priority date\n
     7.	Step 7 Determining the fee to be paid\n
     8.	Step 8 Ensuring all enclosures are attached\n
     9.	Step 9 Complying with objections (if any)\n
    10.	Step 10 Providing full details">
    </TextView>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/search_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/lineaer22"
        android:layout_marginStart="20dp"
        android:background="@drawable/shape2"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="Search">


    </androidx.appcompat.widget.AppCompatButton>
        <TextView
            android:id="@+id/information"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text3"
            android:layout_marginStart="20dp"
            android:background="@drawable/shape"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:textAlignment="center"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:text="For the above product You can appy patent based on blow given properties"
            android:textSize="20dp">
        </TextView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/shape3"
            android:layout_margin="20dp"
            android:id="@+id/data"
            android:visibility="gone"
            android:layout_below="@+id/information"
            android:layout_height="wrap_content">



    <TextView
        android:id="@+id/text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape4"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:padding="20dp"
       >

    </TextView>

    <TextView
        android:id="@+id/pro1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="20dp">

    </TextView>
    <TextView
        android:id="@+id/pro2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pro1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="20dp">

    </TextView>
    <TextView
        android:id="@+id/pro3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pro2"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"

        android:textSize="20dp">

    </TextView>
        </RelativeLayout>
    </RelativeLayout>


</ScrollView>