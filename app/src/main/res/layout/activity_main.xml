<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/search_box"
        android:layout_marginStart="20dp"
        android:background="@drawable/shape"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:hint="search for item here"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"></EditText>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search_button"
        android:text="Search"
        android:layout_below="@+id/search_box"
        android:layout_margin="20dp"

        >

    </Button>

    <TextView
        android:id="@+id/text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_button"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:padding="20dp"
        android:text="your result will be displad here">

    </TextView>

    <TextView
        android:id="@+id/information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="For the above product You can appy patent based on blow given properties"
        android:textSize="20dp">

    </TextView>
    <TextView
        android:id="@+id/pro1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/information"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="pro1"
        android:textSize="20dp">

    </TextView>
    <TextView
        android:id="@+id/pro2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pro1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="pro2"
        android:textSize="20dp">

    </TextView>
    <TextView
        android:id="@+id/pro3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pro2"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="pro3"
        android:textSize="20dp">

    </TextView>


</RelativeLayout>